<h1 class="text-center mt-2">All Players</h1>
@foreach (var player in Model)
{
    <div class="row mt-2 mb-4">
        <div class="player col-6 col-lg-3 game-player">
            <img src="@player.PlayerImage"
             class="player-img-top img-fluid player-image">
            <div class="player-body">
                <h5 class="player-title text-center" data-toggle="tooltip" data-placement="bottom"
                title="@player.PlayerTitle">
                    @player.FullName
                </h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-center">@player.ListGroup</li>
                    <li class="list-group-item">
                        <span class="speed-stat">@player.SpeedStat</span><span class="endurance-stat">@player.EnduranceStat</span>
                    </li>
                </ul>
                <a href="/Players/AddToCollection?playerId=@player.Id" class="btn btn-block btn-primary">Add to Collection</a>
            </div>
        </div>
    </div>
}